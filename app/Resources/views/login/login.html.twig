{% extends "base.html.twig" %}

{% block title %}MoneyMouth: Login{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-4 col-sm-4 col-xs-3">
            </div>

            <div class="col-lg-2 col-md-4 col-sm-4 col-xs-6" align="center">
                <br/>
                <br/>
                <br/>
                <br/>

                <img src="images/logo.png" alt="MoneyMouth">
                <br/>
                <br/>
                <br/>
                <h4>Sports Betting Pools</h4>
                <br/>
                <br/>
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="_username" placeholder="username">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="_password" placeholder="password">
                    </div>
                    <input type="hidden" name="_target_path" value="/" />
                    <input type="submit" name="submit" value="Login" />
                </form>
                <br/>
                {% if error %}
                    <div class="alert alert-danger">Please enter a valid username and password.</div>
                {% endif %}
                <br/>
                <br/>
                <h5><a href = "/register">Create an Account</a></h5>
                <br/>
                <br/>
                <br/>
                <h6>Help</h6>

            </div>

            <div class="col-lg-5 col-md-4 col-sm-4 col-xs-3">
            </div>
        </div>
    </div>
{% endblock %}
